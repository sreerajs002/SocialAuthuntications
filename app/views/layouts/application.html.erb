 <!DOCTYPE html> 
<html>
<head>
  <title>Various Authentication App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
</head>
<body>
<header class="container-fluid" style="background-color:#d3d3d3;postion:fixed">
  <h1 class="text-center">Welcome TO <strong>NYROS TECHNOLOGIES</strong></h1>
</header>
<div class="navbar-header  col-lg-offset-1 ac">
      <a class="navbar-toggle btn " data-toggle="collapse" 
         data-target="#example-navbar-collapse"><span class="glyphicon glyphicon-align-justify"></span></a>
         <span class="sr-only">Toggle navigation</span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#" style='padding:0px'><%=image_tag("icon.png" ,:alt => "home image" ,:width => 130,:height =>50) %></a>
</div>
   <div class="collapse navbar-collapse ac"  id="example-navbar-collapse">
   <ul class="nav navbar-nav ">
       
        <%if current_user%>
        <li> <%= link_to 'cities',cities_path , class:'btn'%></li>
        <%end%>
   </ul>     
    <ul class="nav navbar-nav pull-right ">
        <% if current_user %>
        <li style='margin-top:17px'>Welcome <strong><%= current_user.name %></strong>.</li>
        <li><%= link_to "Logout", log_out_path , :class => 'btn'  %></li>
        <% else %>
        <li><%= link_to "Sign up", new_user_path, :class => 'btn '  %></li>
        <li><%= link_to "Login", new_session_path, :class => 'btn '  %></li>
        <li> <p class="myclass">Sign in using</p></li> 
        <li><%= link_to (image_tag('fb.png', width:30, height:30)) , "/auth/facebook" , class:'myclass1 btn'%> </li> 
        <li><%= link_to (image_tag('linkedin.png', width:30, height:30)) , "/auth/linkedin" , class:'myclass1 btn'%> </li>
        <li><%= link_to (image_tag('twitter.png', width:30, height:30)) , "/auth/twitter" , class:'myclass1 btn'%> </li> 
        <li><%= link_to (image_tag('google.png', width:30, height:30)) , "/auth/google_oauth2" , class:'myclass1 btn'%> </li> 
        <% end %>
    </ul>
    </div>


<% if notice %>
  <p class="alert alert-success text-center"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger text-center"><%= alert %></p>
<% end %>

<div class="container">

  <%= yield %>
</div>

</body>
</html>
